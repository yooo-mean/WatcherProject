<Window x:Class="WatcherUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatcherUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Label -->
        <Label x:Name="MyLabel" Content="WatcherUI 실행 중" FontSize="16" HorizontalAlignment="Center" Margin="0,20,0,10" Visibility="Collapsed"/>

        <!-- Button -->
        <Button x:Name="ShowButton" Content="레이블 보이기" Click="ShowButton_Click" Width="150" Height="30" HorizontalAlignment="Center"/>

    </Grid>
</Window>
